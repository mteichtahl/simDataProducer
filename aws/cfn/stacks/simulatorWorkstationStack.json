{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "EnvironmentName": {
      "Description": "The string that will be prefixed to each instance name",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "16",
      "Default": "simWorkStation",
      "AllowedPattern": "[a-zA-Z0-9]*",
      "ConstraintDescription": "Environment names must be 3-16 characters and contain only a-z and 0-9."
    },
    "KeyPairName": {
      "Description": "Name of the key pair to use for EC2",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "32",
      "Default": "<YOUR_KEY_PAIR_HERE>",
      "AllowedPattern": "[\\x20-\\x7E]*",
      "ConstraintDescription": "can contain only ASCII characters."
    },
    "AMI": {
      "Description": "Name of the AMI id to use",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "32",
      "Default": "ami-30041c53"
    },
    "InstanceType": {
      "Description": "EC2 instance type",
      "Type": "String",
      "Default": "t2.micro"
    },
    "Subnet": {
      "Description": "Subet for the Instance",
      "Type": "String",
      "Default": "<YOUR_SUBNET_HERE>"
    },
    "InstanceSecurityGroup": {
      "Description": "SecurityGroup for the Instance",
      "Type": "String",
      "Default": "<YOUR_SECURITY_GROUP_HERE>"
    },
    "SimulatorIPAddress": {
      "Description": "IP Address of the simulator instance",
      "Type": "String",
      "Default": "<SIMULATOR_IP_ADDRESS>"
    }
  },
  "Resources": {
      "InstanceRootRole": {
         "Type": "AWS::IAM::Role",
         "Properties": {
            "AssumeRolePolicyDocument": {
               "Version" : "2012-10-17",
               "Statement": [ {
                  "Effect": "Allow",
                  "Principal": {
                     "Service": [ "ec2.amazonaws.com" ]
                  },
                  "Action": [ "sts:AssumeRole" ]
               } ]
            },
            "Path": "/",
            "Policies": [ {
               "PolicyName": "root",
               "PolicyDocument": {
                  "Version" : "2012-10-17",
                  "Statement": [ {
                     "Effect": "Allow",
                     "Action": "kinesis:*",
                     "Resource": "*"
                  } ]
               }
               } ]
            }
      },
      "RootInstanceProfile": {
         "Type": "AWS::IAM::InstanceProfile",
         "Properties": {
            "Path": "/",
            "Roles": [ {
               "Ref": "InstanceRootRole"
            } ]
         }
      },
    "IPAddress": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc",
        "InstanceId": {
          "Ref": "EC2"
        }
      }
    },
    "EC2": {
      "Type": "AWS::EC2::Instance",
       "Metadata" : {
            "AWS::CloudFormation::Init" : {
                "commands" : {
                     "setup" : {
                        "env" : { "SIM_DATA_IPADDRESS" : {"Ref": "SimulatorIPAddress" }}
                     }
                }
            }
      },
      "Properties": {
        "ImageId": {
          "Ref": "AMI"
        },
        "KeyName": {
          "Ref": "KeyPairName"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "SecurityGroupIds": [{
          "Ref": "InstanceSecurityGroup"
        }],
        "SubnetId": {
          "Ref": "Subnet"
        },
        "IamInstanceProfile":{
            "Ref":"RootInstanceProfile"
        },
        "Tags": [{
          "Key": "Name",
          "Value": "simWorkStation"
        }],
        "BlockDeviceMappings": [{
            "DeviceName": "/dev/sdm",
            "Ebs": {
              "VolumeType": "io1",
              "Iops": "200",
              "DeleteOnTermination": "true",
              "VolumeSize": "20"
            }
          },
          {
            "DeviceName": "/dev/sdk",
            "NoDevice": {}
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": ["", [
                "#!/bin/bash\n",
                "yum -y update\n",
                "wget https://dl.yarnpkg.com/rpm/yarn.repo -O /etc/yum.repos.d/yarn.repo\n",
                "curl -sL https://rpm.nodesource.com/setup_7.x | bash -\n",
                "yum -y install nodejs yarn git\n",
                "npm install -g forever mqtt\n",
                "git clone https://github.com/mteichtahl/simDataConsumer.git\n",
                "cd simDataConsumer\n",
                "yarn install\n"
            ]]
          }
        }
      }
    }
  },
  "Outputs": {
    "IPAddress": {
      "Value": {
        "Fn::GetAtt": ["EC2", "PublicIp"]
      },
      "Description": "Public IP Address",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-EC2-PublicIp"
        }
      }
    }
  }
}